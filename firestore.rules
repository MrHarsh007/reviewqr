rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Allow public read access (needed for public review pages)
      allow read: if true;
      
      // Allow write only if authenticated and user is updating their own document
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Validation rules
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['uid', 'email', 'displayName', 'photoURL', 'companyName', 'yearsOfExperience', 'categories', 'createdAt', 'updatedAt'])
        && request.resource.data.uid == userId
        && request.resource.data.companyName is string
        && request.resource.data.yearsOfExperience is number
        && request.resource.data.categories is list
        && request.resource.data.categories.size() >= 1;
      
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.uid == userId;
    }
  }
}
